{
  "compilerOptions": {
    // Language and Environment
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "bundler",

    // Type Checking
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    // Module Resolution
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["src/shared/*"],
      "@backend/*": ["src/backend/*"],
      "@frontend/*": ["src/frontend/*"],
      "@engine/*": ["src/engine/*"]
    },
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // Emit
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": false,
    "noEmit": false,

    // Interop Constraints
    "isolatedModules": true,
    "allowJs": true,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,

    // Skip Type Checking
    "skipLibCheck": true,

    // Bun-specific
    "types": ["bun-types"]
  },
  "include": [
    "src/**/*",
    ".claude/**/*.ts",
    "vite.config.mts",
    "eslint.config.mjs"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "app",
    ".neutralino",
    "test-results",
    "coverage"
  ]
}
